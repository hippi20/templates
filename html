.tab-button { padding: 10px 20px; cursor: pointer; background: none; border: none; outline: none; }
.tab-button.active { border-bottom: 2px solid #1976d2; }
.tab-content { display: none; padding: 20px; }
.tab-content.active { display: block; }

/* Team Select Styles */
.team-select-container { flex: 1; position: relative; }
.selected-teams-display { cursor: pointer; min-height: 38px; display: flex; flex-wrap: wrap; align-items: center; padding: 0 8px; gap: 4px; border: 1px solid #ccc; border-radius: 4px; background: #fff; }
.selected-teams-display span.placeholder { color: #888; }
.team-dropdown { position: absolute; top: 100%; left: 0; right: 0; z-index: 10; background: #fff; border: 1px solid #ccc; border-radius: 4px; max-height: 180px; overflow-y: auto; box-shadow: 0 4px 8px rgba(0,0,0,0.1); display: none; }
.team-options-list { list-style: none; padding: 0 8px; margin: 0; }
.team-options-list li { padding: 8px; cursor: pointer; border-bottom: 1px solid #eee; display: flex; align-items: center; }

/* Message Styles */
.message-error { color: #e53935; font-weight: bold; margin-bottom: 10px; }
.message-success { color: #43a047; font-weight: bold; margin-bottom: 10px; }


<!-- Tab Buttons -->
<div class="tabs">
    <button class="tab-button active" data-tab="create">Create New Dataset</button>
    <button class="tab-button" data-tab="modify">Modify Existing Dataset</button>
</div>

<!-- Modify Tab Content -->
<div id="modifyTabContent" class="tab-content hidden">
    <div class="row" style="font-size: 1.5em; font-weight: bold; margin-bottom: 20px;">Modify Existing Dataset</div>
    <form id="modifyDatasetForm" method="post">
        {% csrf_token %}
        <!-- Dataset Name Input -->
        <div class="row">
            <div class="label">Dataset Name:</div>
            <input class="input" type="text" id="modifyDatasetName" name="datasetName" required>
        </div>

        <!-- Team Selection -->
        <div class="row" style="align-items: flex-start;">
            <div class="label" style="padding-top: 8px;">Team Names:</div>
            <div id="modifyTeamSelectContainer" class="team-select-container">
                <div id="modifySelectedTeamsDisplay" class="selected-teams-display">
                    <span class="placeholder" id="modifyTeamPlaceholder">Select teams...</span>
                </div>
                <div id="modifyTeamDropdown" class="team-dropdown">
                    <input type="text" id="modifyTeamSearchInput" class="input" placeholder="Search teams...">
                    <ul id="modifyTeamOptionsList" class="team-options-list"></ul>
                </div>
            </div>
        </div>

        <!-- JSON Input -->
        <div class="row" id="modifyJsonInputRow" style="align-items: flex-start;">
            <div class="label" style="padding-top: 8px;">Existing Fields JSON:
                <span id="modifyJsonInfoIcon" style="cursor:pointer; margin-left:6px; color:#1976d2; font-size:1.1em;" title='Format: {"column_name": "string|float"}'>ℹ️</span>
            </div>
            <textarea id="modifyJsonFieldsInput" class="input" rows="15" placeholder='Fetched JSON will appear here' style="flex:2; resize: vertical;"></textarea>
        </div>
        <div class="row message-error hidden" id="modifyJsonErrorRow"></div>

        <!-- Action Buttons -->
        <div class="row" style="justify-content: flex-end; margin-top: 24px;">
            <button type="button" class="btn btn-info" id="loadExistingBtn">Load Existing Dataset</button>
            <button type="submit" class="btn btn-primary" id="updateExistingBtn">Update Existing Dataset</button>
        </div>
        <div class="row message-success hidden" id="modifySuccessMessage"></div>
        <div class="row message-error hidden" id="modifyErrorMessage"></div>
    </form>
</div>


// State variables
let modifyTeamNames = [];
let modifyJsonFieldsValid = true;

// Tab Elements
const createTabButton = document.querySelector('[data-tab="create"]');
const modifyTabButton = document.querySelector('[data-tab="modify"]');
const createTabContent = document.getElementById('createTabContent');
const modifyTabContent = document.getElementById('modifyTabContent');

// Modify Tab Elements
const modifyDatasetNameInput = document.getElementById('modifyDatasetName');
const modifyTeamSelectContainer = document.getElementById('modifyTeamSelectContainer');
const modifySelectedTeamsDisplay = document.getElementById('modifySelectedTeamsDisplay');
const modifyTeamDropdown = document.getElementById('modifyTeamDropdown');
const modifyTeamSearchInput = document.getElementById('modifyTeamSearchInput');
const modifyTeamOptionsList = document.getElementById('modifyTeamOptionsList');
const modifyTeamPlaceholder = document.getElementById('modifyTeamPlaceholder');
const modifyJsonFieldsInput = document.getElementById('modifyJsonFieldsInput');
const modifyJsonErrorRow = document.getElementById('modifyJsonErrorRow');
const loadExistingBtn = document.getElementById('loadExistingBtn');
const updateExistingBtn = document.getElementById('updateExistingBtn');
const modifySuccessMessage = document.getElementById('modifySuccessMessage');
const modifyErrorMessage = document.getElementById('modifyErrorMessage');
const modifyDatasetForm = document.getElementById('modifyDatasetForm');

// List of available teams
const ALL_TEAMS = ['team1', 'team2', 'team3', 'team4', 'team5', 'team6']; // Update with your teams

// Tab Switching Logic
function switchTab(tabName) {
    if (tabName === 'create') {
        createTabButton.classList.add('active');
        modifyTabButton.classList.remove('active');
        createTabContent.classList.remove('hidden');
        modifyTabContent.classList.add('hidden');
    } else if (tabName === 'modify') {
        modifyTabButton.classList.add('active');
        createTabButton.classList.remove('active');
        modifyTabContent.classList.remove('hidden');
        createTabContent.classList.add('hidden');
        renderModifyTeamOptions('');
        updateModifySelectedTeamsDisplay();
    }
}

createTabButton.onclick = () => switchTab('create');
modifyTabButton.onclick = () => switchTab('modify');

// Team Selection Functions
function renderModifyTeamOptions(filter = '') {
    modifyTeamOptionsList.innerHTML = '';
    const lowerFilter = filter.toLowerCase();
    ALL_TEAMS.filter(team => team.toLowerCase().includes(lowerFilter))
             .forEach(team => {
        const li = document.createElement('li');
        li.style.padding = '8px';
        li.style.cursor = 'pointer';
        li.style.borderBottom = '1px solid #eee';
        li.style.display = 'flex';
        li.style.alignItems = 'center';

        const checkbox = document.createElement('input');
        checkbox.type = 'checkbox';
        checkbox.value = team;
        checkbox.checked = modifyTeamNames.includes(team);
        checkbox.style.marginRight = '8px';

        const label = document.createElement('label');
        label.textContent = team;
        label.style.flexGrow = 1;
        label.style.cursor = 'pointer';

        li.appendChild(checkbox);
        li.appendChild(label);

        li.onclick = (e) => {
            if (e.target !== checkbox && e.target !== label) {
                checkbox.checked = !checkbox.checked;
            }
            handleModifyTeamSelection(team, checkbox.checked);
        };
        checkbox.onclick = (e) => {
            e.stopPropagation();
            handleModifyTeamSelection(team, checkbox.checked);
        };

        modifyTeamOptionsList.appendChild(li);
    });
}

function handleModifyTeamSelection(team, isChecked) {
    if (isChecked) {
        if (!modifyTeamNames.includes(team)) {
            modifyTeamNames.push(team);
        }
    } else {
        modifyTeamNames = modifyTeamNames.filter(t => t !== team);
    }
    updateModifySelectedTeamsDisplay();
}

function updateModifySelectedTeamsDisplay() {
    modifySelectedTeamsDisplay.innerHTML = '';
    if (modifyTeamNames.length === 0) {
        modifyTeamPlaceholder.style.display = '';
        modifySelectedTeamsDisplay.appendChild(modifyTeamPlaceholder);
    } else {
        modifyTeamPlaceholder.style.display = 'none';
        modifyTeamNames.forEach(team => {
            const span = document.createElement('span');
            span.textContent = team;
            span.className = 'selected-team-tag';
            modifySelectedTeamsDisplay.appendChild(span);
        });
    }
}

// Team Dropdown Event Listeners
modifySelectedTeamsDisplay.onclick = () => {
    const isVisible = modifyTeamDropdown.style.display === 'block';
    if (!isVisible) {
        renderModifyTeamOptions(modifyTeamSearchInput.value);
        modifyTeamDropdown.style.display = 'block';
        modifyTeamSearchInput.focus();
    } else {
        modifyTeamDropdown.style.display = 'none';
    }
};

modifyTeamSearchInput.oninput = () => {
    renderModifyTeamOptions(modifyTeamSearchInput.value);
};

document.addEventListener('click', (e) => {
    if (!modifyTeamSelectContainer.contains(e.target)) {
        modifyTeamDropdown.style.display = 'none';
    }
});

// JSON Validation
modifyJsonFieldsInput.oninput = function() {
    let error = '';
    try {
        const parsed = JSON.parse(modifyJsonFieldsInput.value || '{}');
        Object.entries(parsed).forEach(([k, v]) => {
            if (typeof v !== 'string' || (v !== 'string' && v !== 'float')) {
                error = `Invalid datatype for '${k}': '${v}'. Only 'string' and 'float' allowed.`;
            }
        });
    } catch (e) {
        error = 'Invalid JSON syntax.';
    }
    if (error) {
        modifyJsonFieldsValid = false;
        modifyJsonErrorRow.textContent = error;
        modifyJsonErrorRow.style.display = '';
    } else {
        modifyJsonFieldsValid = true;
        modifyJsonErrorRow.textContent = '';
        modifyJsonErrorRow.style.display = 'none';
    }
};

// Load Existing Dataset
loadExistingBtn.onclick = async function() {
    modifySuccessMessage.classList.add('hidden');
    modifyErrorMessage.classList.add('hidden');

    const datasetName = modifyDatasetNameInput.value.trim();
    const teamNamesToLoad = modifyTeamNames.filter(t => t.trim() !== '');

    if (!datasetName || teamNamesToLoad.length === 0) {
        modifyErrorMessage.textContent = 'Please enter a dataset name and select at least one team to load.';
        modifyErrorMessage.classList.remove('hidden');
        return;
    }

    try {
        const response = await fetch('/api/load-existing-dataset/', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
                'X-CSRFToken': '{{ csrf_token }}'
            },
            body: JSON.stringify({
                dataset_name: datasetName,
                team_names: teamNamesToLoad
            })
        });

        const result = await response.json();

        if (response.ok) {
            if (result.fields_json) {
                modifyJsonFieldsInput.value = JSON.stringify(result.fields_json, null, 2);
                modifyJsonFieldsInput.oninput();
                modifySuccessMessage.textContent = 'Dataset loaded successfully.';
                modifySuccessMessage.classList.remove('hidden');
            } else {
                modifyErrorMessage.textContent = 'Dataset found, but no fields to display.';
                modifyErrorMessage.classList.remove('hidden');
            }
        } else {
            modifyErrorMessage.textContent = result.error || 'An unknown error occurred while loading.';
            modifyErrorMessage.classList.remove('hidden');
        }
    } catch (error) {
        console.error('Error loading dataset:', error);
        modifyErrorMessage.textContent = 'Network error or server unreachable.';
        modifyErrorMessage.classList.remove('hidden');
    }
};

// Update Existing Dataset
modifyDatasetForm.onsubmit = async function(e) {
    e.preventDefault();
    modifySuccessMessage.classList.add('hidden');
    modifyErrorMessage.classList.add('hidden');

    modifyJsonFieldsInput.oninput();
    if (!modifyJsonFieldsValid) {
        modifyErrorMessage.textContent = 'Please correct the JSON errors.';
        modifyErrorMessage.classList.remove('hidden');
        return;
    }

    const datasetName = modifyDatasetNameInput.value.trim();
    const teamNamesToUpdate = modifyTeamNames.filter(t => t.trim() !== '');
    let updatedAttributes = {};
    try {
        updatedAttributes = JSON.parse(modifyJsonFieldsInput.value);
    } catch (e) {
        modifyErrorMessage.textContent = 'Invalid JSON in input field. Cannot update.';
        modifyErrorMessage.classList.remove('hidden');
        return;
    }

    if (!datasetName || teamNamesToUpdate.length === 0) {
        modifyErrorMessage.textContent = 'Please enter a dataset name and select at least one team to update.';
        modifyErrorMessage.classList.remove('hidden');
        return;
    }

    try {
        const response = await fetch('/api/update-existing-dataset/', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
                'X-CSRFToken': '{{ csrf_token }}'
            },
            body: JSON.stringify({
                dataset_name: datasetName,
                team_names: teamNamesToUpdate,
                updated_attributes: updatedAttributes
            })
        });

        const result = await response.json();

        if (response.ok) {
            modifySuccessMessage.textContent = result.message;
            modifySuccessMessage.classList.remove('hidden');
        } else {
            modifyErrorMessage.textContent = result.error || 'An unknown error occurred while updating.';
            modifyErrorMessage.classList.remove('hidden');
        }
    } catch (error) {
        console.error('Error updating dataset:', error);
        modifyErrorMessage.textContent = 'Network error or server unreachable.';
        modifyErrorMessage.classList.remove('hidden');
    }
};
